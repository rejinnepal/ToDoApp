<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Rasneet!"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:textSize="40sp" />


    <TextView
        android:id= "@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#407294"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Click To Change Text Color"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="30sp" />


    <TextView
        android:layout_above="@id/button"
        android:background="#407294"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="Click To Change Background Color" />

    <TextView
        android:layout_above="@id/changeBackgroundButton"
        android:background="#407294"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="Click To Change Text" />

    <EditText
        android:layout_above="@id/changeTextButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Create Your Own Text!" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_above="@id/changeTextButton"
        android:background="#407294"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        android:text="Click To Change To Custom Text" />


</RelativeLayout>